{
  "name": "openkanban",
  "version": "0.1.0",
  "description": "TUI kanban board for orchestrating AI coding agents",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '@openkanban/*' dev",
    "build": "bun run --filter '@openkanban/*' build",
    "typecheck": "tsc --noEmit",
    "server": "bun run --filter @openkanban/server dev",
    "tui": "bun run --filter @openkanban/tui dev",
    "start": "bun run bin/openkanban.ts"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.2"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/techdufus/openkanban"
  },
  "author": "techdufus",
  "license": "MIT"
}
